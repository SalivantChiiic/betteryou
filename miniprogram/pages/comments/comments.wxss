.home-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  z-index: 1;
  align-items: center;
  padding-top: 10rpx;
  padding-bottom: env(safe-area-inset-bottom);
  padding-bottom: 100rpx;
}

.avatartextwrapper {
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  width: 90%;
}

.textwrapper {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 20rpx;
  width: 85%;
}

.commentanswerwrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.answerhint {
  background-color: #656565;
  color: #ffffff;
  border-radius: 5rpx;
  font-size: 20rpx;
  padding: 5rpx 10rpx;
  margin-left: 20rpx;
}

.incorrect {
  background-color: #965454;
}

.corrent {
  background-color: #7b8b6f;
}

.smallavatar {
  width: 80rpx;
  min-width: 80rpx;
  min-height: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}

.commentsname {
  font-size: 28rpx;
  font-weight: bold;
  color: #222222;
}

.comments {
  font-size: 28rpx;
  color: #303030;
}

.line {
  width: 80%;
  border: 1rpx solid #D9D9D9;
  height: 0;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

input {
  width: 70%;
  border: 2rpx solid #424242;
  border-radius: 20rpx;
  padding: 10rpx 30rpx;
}

.sendbtn{
  border-radius: 20rpx;
  background-color: rgb(251, 216, 49);
  box-shadow: 3rpx 6rpx 30rpx 1rpx rgb(251, 216, 49);
  border: 2rpx solid #424242;
  width: 15% !important;
  min-height: 70rpx !important;
  padding: 0 !important;
  margin: 0 !important;
  line-height: 70rpx !important;
}

.addcommentavatartextwrapper {
  margin: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 90%;
  align-items: center;
}