.home-container {
  width: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  z-index: 1;
  align-items: center;
  justify-content: center;
  padding-bottom: env(safe-area-inset-bottom);
  margin-bottom: 200rpx;
}

.imagewrapper {
  position: relative;
  width: 94%;
  height: 100%;
  margin: 30rpx 0 10rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  border-radius: 20rpx;
  box-shadow:  3rpx 6rpx 30rpx -5rpx #00000050, -3rpx -2rpx 30rpx -5rpx #00000050;
}

.image {
  position: relative;
  width: 100%;
}

.noimage{
  position: relative;
  width: 100%;
  height: 300rpx;
  background: linear-gradient(#FCF08D, #FFDE85);
}

.imagemask {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  background-color: rgba(0, 0, 0, 0.2);
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.imgtext {
  position: absolute;
  text-shadow: 2px 2px 4px #00000050;
  font-size: 60rpx;
  color: #ffffff;
  text-align: center;
}

.creatortext {
  color: #424242;
  font-size: 28rpx;
  margin-right: 10rpx;
}

.avartarrowwrapper {
  display: flex;
  flex-direction: row;
  width: 90%;
  align-items: center;
  justify-content: flex-start;
  margin-top: 30rpx;
}

.avartarnamewrapper {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  min-width: 60%;
}

.smallavatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
  overflow: hidden;
}

.nickname {
  font-size: 28rpx;
  font-weight: bold;
  color: #424242;
  text-align: left;
  margin-left: 5px;
}

.memodaterowrapper {
  margin: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  width: 90%;
  align-items: center;
}

input {
  width: 100%;
  border: 2rpx solid #D9D9D9;
  border-radius: 20rpx;
  padding: 10rpx 30rpx;
}

.picker {
  width: 100%;
  border: 2rpx solid #D9D9D9;
  border-radius: 20rpx;
  padding: 10rpx 30rpx;
}

.unselecteddatetext {
  color: rgb(149, 149, 149);
}

.uploadbtnwrapper {
  border-radius: 50%;
  position: fixed;
  bottom: 80rpx;
  background: linear-gradient(#FCF08D, #FFDE85);
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 3rpx 6rpx 30rpx -5px #FCF08D, -3rpx -2rpx 30rpx -5rpx #FCF08D;
}

.hoveruploadbtn {
  background-color: rgba(252, 241, 141, 0.644);
  transform: scale(0.95, 0.95);
}

.uploadbtnwrapper image {
  width: 60rpx;
}