@import '/style/common.wxss';

.tabwrapper {
  width: 100vw;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 88.8rpx;
}

.tabitem {
  width: 30%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding: 20rpx;
  font-size: var(--fontSizeFourteen);
  font-weight: var(--regularFontWeight);
  white-space: nowrap;
  color: var(--borderColor);
}

.selected {
  border: 0px;
  border-bottom: 4rpx solid;
  font-weight: var(--semiboldFontWeight);
}